<section class="status">
  <div class="container mx-auto">
    <div class="status-box w-2/3 mx-auto">
      <div class="flex mb-12 items-center justify-between">
        <h1 class="text-xl font-bold">Track delivery status</h1>
        <h6 class="text-xs rounded-full py-1 bg-white px-4 text-green-600"><%= order._id %></h6>
        <input type="hidden" id="hiddenInput" value="<%= JSON.stringify(order) %>" />
      </div>
      <ul>
        <li class="status_line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
        <li class="status_line text-xl pb-16  " data-status="confiremd"><span>Order Confirmation</span></li>
        <li class="status_line text-xl pb-16  " data-status="prepared"><span>Order Prepration</span></li>
        <li class="status_line text-xl pb-16" data-status="delivered"><span>Out for delivery</span></li>
        <li class="status_line text-xl " data-status="completed"><span>Completed</span></li>
      </ul>
    </div>
  </div>
</section>